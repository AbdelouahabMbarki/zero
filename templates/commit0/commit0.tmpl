infrastructure:
  aws:
    accountId: 1234
    region: us-east-1
    eks:
      clusterName: staging
      deploy: true

frontend:
  framework: react
  ci:
    system: circleci
    buildImage: react/react
    buildTag: 1234
    buildCommand: make build
    testCommand: make test
  app:
    name: {{.}}
  header:
    enabled: true
  account:
    enabled: true
    required: false
  sidenav:
    enabled: true
    items:
      - path: /
        label: Home
        icon: home
      - path: /account
        label: Account
        icon: account_circle
  views:
    - path: /account
      component: account
    - path: /
      component: home


services:
  - name: User
    description: User service
    language: go
    gitRepo: github.com/test/repo
    dockerRepo:
    ci:
      system: circleci
      buildImage: golang/golang
      buildTag: 1.12
      buildCommand: make build
      testCommand: make test
    network:
      grpc:
        host: 0.0.0.0
        port: 3000
      http:
        enabled: true
        port: 8080
      web:
        enabled: true
        port: 8090
