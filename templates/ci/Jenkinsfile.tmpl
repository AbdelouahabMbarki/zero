pipeline {
    agent none
    stages {
        stage('Build and Test') {
            parallel {
                stage('Build') {
                    agent {
                        docker {
                            image '{{ .CI.BuildImage }}:{{ .CI.BuildTag }}'
                        }
                    }
                    steps {
                        sh '{{ .CI.BuildCommand }}'
                    }
                }
                stage('Test') {
                    agent {
                        docker {
                            image '{{ .CI.BuildImage }}:{{ .CI.BuildTag }}'
                        }
                    }
                    steps {
                        sh '{{ .CI.TestCommand }}'
                    }
                }
            }
        }
    }
}
